<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SetupApp">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@+id/icon"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/setup_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
    </LinearLayout>
    <ViewFlipper
        android:id="@+id/setup_settingstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true">
        <EditText
            style="@style/setupEditText"
            android:hint="@string/setup_langcode_hint"
            android:inputType="text"
            android:imeOptions="actionNext"/>
        <EditText
            style="@style/setupEditText"
            android:hint="@string/setup_countries_hint"
            android:inputType="text"
            android:imeOptions="actionNext"/>
        <EditText
            style="@style/setupEditText"
            android:hint="@string/setup_teamname_hint"
            android:inputType="text"
            android:imeOptions="actionNext"/>
        <EditText
            style="@style/setupEditText"
            android:hint="@string/setup_teamcontact_hint"
            android:inputType="text"
            android:imeOptions="actionNext"/>
        <EditText
            style="@style/setupEditText"
            android:hint="@string/setup_consname_hint"
            android:inputType="text"
            android:imeOptions="actionNext"/>
        <EditText
            style="@style/setupEditText"
            android:hint="@string/setup_consphone_hint"
            android:inputType="phone"
            android:imeOptions="actionNext"/>
        <EditText
            style="@style/setupEditText"
            android:hint="@string/setup_consemail_hint"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"/>
    </ViewFlipper>
</RelativeLayout>
