<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="setupEditText">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/setup_edittext_paddingTopBot</item>
        <item name="android:paddingBottom">@dimen/setup_edittext_paddingTopBot</item>
        <item name="android:paddingLeft">@dimen/setup_edittext_paddingLefRig</item>
        <item name="android:paddingRight">@dimen/setup_edittext_paddingLefRig</item>
        <item name="android:layout_width">@dimen/setup_edittext_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textColorHint">@color/lightBlue</item>
    </style>

</resources>
